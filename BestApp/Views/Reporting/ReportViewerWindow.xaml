<Window x:Class="BestApp.Views.Reporting.ReportViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestApp.Views.Reporting"
        xmlns:rdlc="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        mc:Ignorable="d"
        Title="ReportViewerWindow"
        Height="450"
        Width="800">
    <Grid>
        <WindowsFormsHost HorizontalAlignment="Stretch"         
                          VerticalAlignment="Stretch"
                          Margin="10,10">
            <rdlc:ReportViewer x:Name="_reportViewer"></rdlc:ReportViewer>
        </WindowsFormsHost>

    </Grid>
</Window>
