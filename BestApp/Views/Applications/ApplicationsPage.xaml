<Page x:Class="BestApp.Views.Applications.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:local="clr-namespace:BestApp.Views.Applications"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationsPage"
      DataContext="{Binding Source={StaticResource Locator}, Path=ApplicationsViewModel}">

    <StackPanel>
        <ComboBox x:Name="ContestsComboBox" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Width="790" 
                  ItemsSource="{Binding Competitions}" 
                  DisplayMemberPath="CityDate">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding DisplayApplicationsCommand}" CommandParameter="{Binding ElementName=ContestsComboBox, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>
        <DataGrid x:Name="Grid" Height="312" VerticalAlignment="Top" ItemsSource="{Binding Contests}" AutoGenerateColumns="True" SelectedItem="{Binding SelectedContest}" IsReadOnly="True">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding DisplayReportCommand}" CommandParameter="{Binding ElementName=Grid, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DataGrid>
        <ComboBox x:Name="Printers" ItemsSource="{Binding Printers}">
            
        </ComboBox>
    </StackPanel>
</Page>
